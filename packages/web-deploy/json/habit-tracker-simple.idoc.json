                        "strokeWidth": 0,
                        "step": 13,
                        "fill": "transparent"
                    },
                    "axis": {
                        "domain": false
                    },
                    "background": "transparent"
                },
                "transform": [
                    {
                        "calculate": "parseInt(slice(datum.date, 8, 10))",
                        "as": "day_of_month"
                    },
                    {
                        "calculate": "datum.completed ? 1 : 0",
                        "as": "completed_numeric"
                    }
                ],
                "mark": "rect",
                "encoding": {
                    "x": {
                        "field": "day_of_month",
                        "type": "ordinal",
                        "title": "Day of Month",
                        "scale": {
