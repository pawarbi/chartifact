{
  "name": "@microsoft/chartifact-markdown",
  "type": "module",
  "private": true,
  "version": "1.0.0",
  "description": "Low-code, low-friction interactive documents made with markdown",
  "main": "dist/esnext/index.js",
  "types": "dist/esnext/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "deploy": "node ./scripts/deploy.js",
    "dev": "vite",
    "watch": "tsc -p . -w",
    "tsc": "tsc -p .",
    "bundle": "vite build --config vite.bundle.config.js",
    "build": "npm run tsc && npm run bundle",
    "postbuild": "node ./scripts/copy-css.mjs",
    "build:02": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microsoft/chartifact.git"
  },
  "keywords": [
    "markdown",
    "vega",
    "vega-lite"
  ],
  "author": "Dan Marshall",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/microsoft/chartifact/issues"
  },
  "homepage": "https://github.com/microsoft/chartifact#readme",
  "devDependencies": {
    "@types/css-tree": "^2.3.10"
  }
}
